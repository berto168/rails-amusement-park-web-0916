<%= form_tag rides_path do %>
Name: <%= label_tag 'name', @attraction.name %><br>
Ticket Requirement: <%= label_tag 'tickets', @attraction.tickets %><br>
Height Requirement: <%= label_tag 'min_height', @attraction.min_height %><br>
Nausea Rating: <%= label_tag 'nausea_rating', @attraction.nausea_rating %><br>
Happiness Rating: <%= label_tag 'happiness_rating', @attraction.happiness_rating %><br>
<%= hidden_field_tag 'attraction_id', @attraction.id %>
<% if !@user.admin %>
<%= submit_tag 'Go on this ride' %>
<% end  %>
<% end %>

<% if @user.admin %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>
